<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>
    <!-- Default application theme. -->
    <style name="Standard" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/primaryLightColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryDark">@color/secondaryDarkColor</item>
        <item name="colorSecondaryLight">@color/secondaryLightColor</item>
        <item name="colorPrimaryText">@color/primaryTextColor</item>
        <item name="colorSecondaryText">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/secondaryLightColor</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="colorButtonNormal">@color/brightOverlay</item>
        <item name="colorButton">@color/secondaryColor</item>
        <item name="colorButtonAlt">@color/secondaryLightColor</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primaryLightColor</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <!--Style for Splash Screen-->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name ="android:windowBackground"> @drawable/splashscreen_background</item>
    </style>

    <style name="ratingBarTheme" parent="android:style/Widget.Material.RatingBar">
        <item name="android:layout_width">160dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">5</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:progressDrawable">@drawable/bottle_ratingbar_large</item>
    </style>
    <style name="ratingBarThemeSmall" parent="android:style/Widget.Material.RatingBar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">5</item>
        <item name="android:progressDrawable">@drawable/bottle_ratingbar_small</item>
    </style>
    <!-- Night / Dark Mode theme. -->
    <style name="Natt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/night_primaryColor</item>
        <item name="colorPrimaryDark">@color/night_primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/night_primaryLightColor</item>
        <item name="colorSecondary">@color/night_secondaryColor</item>
        <item name="colorSecondaryDark">@color/night_secondaryDarkColor</item>
        <item name="colorSecondaryLight">@color/night_secondaryLightColor</item>
        <item name="colorPrimaryText">@color/night_primaryTextColor</item>
        <item name="colorSecondaryText">@color/night_secondaryTextColor</item>
        <item name="colorButton">@color/night_secondaryColor</item>
        <item name="colorButtonAlt">@color/night_secondaryLightColor</item>
    </style>
    <style name="Livlig" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/livlig_primaryColor</item>
        <item name="colorPrimaryDark">@color/livlig_primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/livlig_primaryLightColor</item>
        <item name="colorSecondary">@color/livlig_secondaryColor</item>
        <item name="colorSecondaryDark">@color/livlig_secondaryDarkColor</item>
        <item name="colorSecondaryLight">@color/livlig_secondaryLightColor</item>
        <item name="colorPrimaryText">@color/livlig_primaryTextColor</item>
        <item name="colorSecondaryText">@color/livlig_secondaryTextColor</item>
        <item name="colorButton">@color/livlig_secondaryColor</item>
        <item name="colorButtonAlt">@color/livlig_secondaryLightColor</item>
    </style>
    <style name="Absint" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/absint_primaryColor</item>
        <item name="colorPrimaryDark">@color/absint_primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/absint_primaryLightColor</item>
        <item name="colorSecondary">@color/absint_secondaryColor</item>
        <item name="colorSecondaryDark">@color/absint_secondaryDarkColor</item>
        <item name="colorSecondaryLight">@color/absint_secondaryLightColor</item>
        <item name="colorPrimaryText">@color/absint_primaryTextColor</item>
        <item name="colorSecondaryText">@color/absint_secondaryTextColor</item>
        <item name="colorButton">@color/absint_secondaryColor</item>
        <item name="colorButtonAlt">@color/absint_secondaryLightColor</item>
    </style>

</resources>
